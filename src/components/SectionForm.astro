<section
  id="contact"
  class="pt-40 pb-40 bg-zinc-950"
>
  <div class="max-w-4xl mx-auto px-6">

    <!-- Надзаголовок -->
    <p class="text-xs uppercase tracking-[0.2em] text-zinc-500 mb-6">
      Связаться
    </p>

    <!-- Форма -->
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      class="space-y-6 max-w-xl"
    >
      <input type="hidden" name="form-name" value="contact" />

      <!-- Имя -->
      <div>
        <label class="block text-zinc-500 text-sm mb-2" for="name">
          Имя
        </label>
        <input
          id="name"
          name="name"
          type="text"
          required
          class="w-full bg-transparent border border-zinc-800 px-4 py-3 text-zinc-300 text-sm focus:outline-none focus:border-zinc-600 transition"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-zinc-500 text-sm mb-2" for="email">
          Email
        </label>
        <input
          id="email"
          name="email"
          type="email"
          required
          class="w-full bg-transparent border border-zinc-800 px-4 py-3 text-zinc-300 text-sm focus:outline-none focus:border-zinc-600 transition"
        />
      </div>

      <!-- Сообщение -->
      <div>
        <label class="block text-zinc-500 text-sm mb-2" for="message">
          Сообщение
        </label>
        <textarea
          id="message"
          name="message"
          rows="4"
          required
          class="w-full bg-transparent border border-zinc-800 px-4 py-3 text-zinc-300 text-sm focus:outline-none focus:border-zinc-600 transition resize-none"
        ></textarea>
      </div>

      <!-- Кнопка -->
      <button
        type="submit"
        class="inline-block border border-zinc-800 px-8 py-3 text-sm text-zinc-300 hover:text-zinc-100 hover:border-zinc-600 transition"
      >
        Запросить контакт
      </button>
    </form>

  </div>
</section>
